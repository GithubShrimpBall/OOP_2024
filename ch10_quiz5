#include <iostream>
#include <vector>
#include <string>
using namespace std;

int main(void){
    int size =3;
    vector<pair<int, string> > vPair; //일단 여기서 괄호를 > > 로 하지 않고 >>로 표기해서 오류가 발생했음
    // 아 >> 로 하게 되면 shift 연산자로 잘못 파싱되는 문제가 발생함. 고로 반드시 > > 로 표기해야 의도대로 됨!!
    int iArray[]={10, 20, 30};
    string strArray[]={"Seoul", "Busan", "Junju"};
    

    for(int i=0; i<size; i++){
        vPair.push_back(make_pair(iArray[i], strArray[i]));
    }
    //결국은 이 위의 블럭이 이 문제에서 중요한 부분이다. make_pair 를 이용해서 pair를 만들고, 이를 push_back으로 넣어주는 것임.
    //연계해서 어떻게 출력하는지도 보면 좋을 것!!


    for(int i=0; i<size; i++){
        cout<<"vPair[" << i << "]= " << "(" << vPair[i].first << " " << vPair[i].second << " )" << endl;
    }
}

/*
의도된 출력은 vPair[0]=(10 seoul) ... 을 출력하는 것이다.
*/
